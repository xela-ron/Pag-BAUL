<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">    <!-- This defines the border color and width -->
    <stroke
        android:width="4dp"
        android:color="#C49A6C" />

    <!-- This adds some space between the border and the image -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- This makes the corners of the border rounded -->
    <corners android:radius="8dp" />

</shape>
