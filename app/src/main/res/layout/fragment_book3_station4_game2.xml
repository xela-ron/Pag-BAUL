<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5D6A6">

    <!-- Header / LOGO Background -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#C49A6C"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pag-BAUL"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- White Floating Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_border"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@android:color/black" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Station 4. GAMES"
                android:textColor="#C49A6C"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnBack" />

            <!-- Instructions Text -->
            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="Panuto: Pumili ng isa sa anim na pasahero at ayusin ang lalabas na jumbled word. Kapag nabuo na ang salita, ibigay ang tamang kahulugan o gamit nito upang makumpleto ang laro; kung mali ang sagot, mananatili siya. Layunin ng laro na matulungan ang lahat ng pasahero sa pamamagitan ng pagsagot nang tama sa bawat hamon."
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBack" />

            <!-- Container for passengers who have answered correctly -->
            <LinearLayout
                android:id="@+id/jeepPassengersContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="end|center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/ivJeep"
                app:layout_constraintEnd_toEndOf="@id/ivJeep"
                app:layout_constraintStart_toStartOf="@id/ivJeep"
                app:layout_constraintTop_toTopOf="@id/ivJeep" />

            <!-- Jeep Image -->
            <ImageView
                android:id="@+id/ivJeep"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:scaleType="fitCenter"
                android:src="@drawable/jeep"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvInstructions" />

            <!-- Passengers Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/passengersContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivJeep">

                <!-- ROW 1 -->
                <ImageView
                    android:id="@+id/pKalsada"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/kalsada"
                    android:tag="KALSADA,AKLSAAD"
                    app:layout_constraintBottom_toTopOf="@id/pTulong"
                    app:layout_constraintEnd_toStartOf="@id/pJeef"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.3" />

                <ImageView
                    android:id="@+id/pJeef"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/jeff"
                    android:tag="JEFF,JFEF"
                    app:layout_constraintBottom_toBottomOf="@id/pKalsada"
                    app:layout_constraintEnd_toStartOf="@id/pPasahero"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintStart_toEndOf="@id/pKalsada"
                    app:layout_constraintTop_toTopOf="@id/pKalsada"
                    app:layout_constraintWidth_percent="0.3" />


                <ImageView
                    android:id="@+id/pPasahero"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pasahero"
                    android:tag="PASAHERO,EHASAPRO"
                    app:layout_constraintBottom_toBottomOf="@id/pKalsada"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintStart_toEndOf="@id/pJeef"
                    app:layout_constraintTop_toTopOf="@id/pKalsada"
                    app:layout_constraintWidth_percent="0.3" />

                <!-- ROW 2 -->
                <ImageView
                    android:id="@+id/pTulong"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tulong"
                    android:tag="TULONG,TOLNUG"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/pMabait"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pKalsada"
                    app:layout_constraintWidth_percent="0.3" />

                <ImageView
                    android:id="@+id/pMabait"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mabait"
                    android:tag="MABAIT,BAITAM"
                    app:layout_constraintBottom_toBottomOf="@id/pTulong"
                    app:layout_constraintEnd_toStartOf="@id/pBarangay"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintStart_toEndOf="@id/pTulong"
                    app:layout_constraintTop_toTopOf="@id/pTulong"
                    app:layout_constraintWidth_percent="0.3" />

                <ImageView
                    android:id="@+id/pBarangay"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/barangay"
                    android:tag="BARANGAY,DRYABANG"
                    app:layout_constraintBottom_toBottomOf="@id/pTulong"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintStart_toEndOf="@id/pMabait"
                    app:layout_constraintTop_toTopOf="@id/pTulong"
                    app:layout_constraintWidth_percent="0.3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Jumbled Word Game Pop-up -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/gamePopup"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#FFFFFF"
                android:elevation="10dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tvJumbledWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/etAnswer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="DRYABANG" />

                <EditText
                    android:id="@+id/etAnswer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:hint="Ayusin ang salita"
                    android:inputType="textVisiblePassword|textNoSuggestions"
                    android:maxLines="1"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toTopOf="@id/btnSubmit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvJumbledWord" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Ipasa"
                    app:layout_constraintBottom_toTopOf="@id/tvMeaning"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etAnswer" />

                <TextView
                    android:id="@+id/tvMeaning"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:justificationMode="inter_word"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/btnClosePopup"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnSubmit"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/btnClosePopup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Isara"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvMeaning"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
