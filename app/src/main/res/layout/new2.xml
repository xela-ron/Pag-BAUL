<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAD6A5">

    <!-- 1. FULL SCREEN MAP IMAGE -->
    <!-- scaleType="centerCrop" fills the screen. -->
    <ImageView
        android:id="@+id/ivMapBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/map_background"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. BACK BUTTON (Floating Top Left) -->
    <ImageView
        android:id="@+id/btnBackToBooks"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@drawable/bg_circle_station"
        android:padding="12dp"
        app:tint="#FFFFFF"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 
       3. STATION BUTTONS 
       Text is now just numbers (1, 2, 3...) to fix the overlapping text issue.
    -->

    <!-- Station 1: Green Flag Area (Top Left) -->
    <Button
        android:id="@+id/btnStation1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_circle_station"
        android:elevation="5dp"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintVertical_bias="0.30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Station 2: Northern Forest -->
