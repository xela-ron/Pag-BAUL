<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0F0C0"> <!-- Light Green Background -->

    <!-- Header / LOGO -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#C19A6B"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGO"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- The White Card Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <!-- Back Icon -->
            <ImageView
                android:id="@+id/btnBackIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_border"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#000000" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Question with a twist"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnBackIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/btnBackIcon"/>

            <!-- SINGLE SCROLL VIEW FOR ALL QUESTIONS -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@id/btnDoneQuiz"
                app:layout_constraintTop_toBottomOf="@id/tvTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="40dp">

                    <!-- Question 1 -->
                    <TextView
                        android:text="1. Ano ang ginagawa ng magkapatid na sina Willy at Arlyn sa bahay?"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <RadioButton android:text="A. Naglalaro sila" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="B. Nag-aaral sila" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="C. Naglilinis sila at naglalaba" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="D. Nag-aaway sila" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </RadioGroup>

                    <!-- Question 2 -->
                    <TextView
                        android:text="2. Bakit hindi makapagtrabaho si Gng. Ferrer?"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <RadioButton android:text="A. Kasi may sakit siya" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="B. Kasi walang trabaho" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="C. Kasi ayaw niya" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="D. Kasi may lakad siya" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </RadioGroup>

                    <!-- Question 3 -->
                    <TextView
                        android:text="3. Ano ang inutos ni Gng. Ferrer sa kanyang mga anak?"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <RadioButton android:text="A. Pumunta sa sinehan" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="B. Pumunta sa palengke" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="C. Pumunta sa paaralan" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="D. Pumunta sa parke" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </RadioGroup>

                    <!-- Question 4 -->
                    <TextView
                        android:text="4. Ano ang pangako ni Willy sa kanyang ina?"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <RadioButton android:text="A. Ibibili niya ng itlog at prutas" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="B. Ibibili niya ng damit" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="C. Ibibili niya ng laruan" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="D. Hindi niya gagawin ang anuman" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </RadioGroup>

                    <!-- Question 5 -->
                    <TextView
                        android:text="5. Sino ang gumawa ng listahan ng mga bagay na kailangan?"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <RadioButton android:text="A. Willy" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="B. Arlyn" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="C. Gng. Ferrer" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="D. Walang nabanggit" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </RadioGroup>

                    <!-- Question 6 -->
                    <TextView
                        android:text="6. Ano ang reaksyon ni Arlyn nang makita ang listahan?"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <RadioButton android:text="A. Masaya siya" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="B. Malungkot siya" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="C. Nag-alala siya" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="D. Walang reaksyon" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </RadioGroup>

                    <!-- Question 7 -->
                    <TextView
                        android:text="7. Ano ang sinabi ni Gng. Ferrer tungkol sa pera?"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <RadioButton android:text="A. May sapat sila" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="B. Wala silang pera" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="C. Hindi sapat ang pera para sa itlog" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="D. Hindi niya sinabi" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </RadioGroup>

                    <!-- Question 8 -->
                    <TextView
                        android:text="8. Ano ang damdamin ni Gng. Ferrer sa kanyang mga anak?"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <RadioButton android:text="A. Proud" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="B. Galit" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="C. Malungkot" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="D. Walang damdamin" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </RadioGroup>

                    <!-- Question 9 -->
                    <TextView
                        android:text="9. Ano ang pangarap ni Willy para sa kanyang ina?"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <RadioButton android:text="A. Makapag-aral siya" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="B. Makapagtrabaho siya" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="C. Mabigyan ng itlog at prutas" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="D. Walang nabanggit" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </RadioGroup>

                    <!-- Question 10 -->
                    <TextView
                        android:text="10. Ano ang tema ng kwento?"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <RadioButton android:text="A. Pagmamahal at sakripisyo" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="B. Pag-aaral at edukasyon" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="C. Pagtutulungan at kooperasyon" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <RadioButton android:text="D. Walang tema" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </RadioGroup>

                </LinearLayout>
            </ScrollView>

            <!-- DONE BUTTON AT THE BOTTOM -->
            <Button
                android:id="@+id/btnDoneQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DONE"
                android:backgroundTint="#FFEB3B"
                android:textColor="#333333"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
