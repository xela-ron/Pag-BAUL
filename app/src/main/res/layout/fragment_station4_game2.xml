<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0F0C0">

    <!-- Header / LOGO -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#33691E"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGO"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- The White Card Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Title Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/btnBackIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_border"
                        android:padding="8dp"
                        android:src="@drawable/ic_arrow_back"
                        app:tint="#000000" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Games"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000"/>

                    <View android:layout_width="40dp" android:layout_height="40dp"/>
                </LinearLayout>

                <!-- Instructions -->
                <TextView
                    android:text="Ibigay ang mga larawan o ilustrasion ng mga eksena sa kwento. Hilingin sa mga estudyante na ayusin ang mga ito sa tamang pagkakasunod-sunod."
                    android:textSize="16sp"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    android:textColor="#333333"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"/>

                <!-- ROW 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:weightSum="2">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/game_drop_target_border"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:id="@+id/drag1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/b1s4game2_3"
                            android:scaleType="fitCenter"
                            android:padding="4dp"/>
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/target1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/game_drop_target_border"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- ROW 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:weightSum="2">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/game_drop_target_border"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:id="@+id/drag2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/b1s4game2_1"
                            android:scaleType="fitCenter"
                            android:padding="4dp"/>
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/target2"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/game_drop_target_border"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- ROW 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:weightSum="2">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/game_drop_target_border"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:id="@+id/drag3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/b1s4game2_4"
                            android:scaleType="fitCenter"
                            android:padding="4dp"/>
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/target3"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/game_drop_target_border"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- ROW 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp"
                    android:weightSum="2">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/game_drop_target_border"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:id="@+id/drag4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/b1s4game2_2"
                            android:scaleType="fitCenter"
                            android:padding="4dp"/>
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/target4"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/game_drop_target_border"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Button Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btnReset"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnDone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DONE"
                        android:backgroundTint="#2196F3"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>