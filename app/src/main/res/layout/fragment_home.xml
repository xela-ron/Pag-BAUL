<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Book"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <!-- Book 1 Button -->
    <Button
        android:id="@+id/btnBook1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Book 1: ANG YAMAN NG MAGULANG"
        android:layout_marginBottom="16dp"/>

    <!-- Book 2 Button (Placeholder) -->
    <Button
        android:id="@+id/btnBook2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Book 2: SI TAGAK AT SI KALABAW"
        android:layout_marginBottom="16dp"/>

    <!-- Book 3 -->
    <Button
        android:id="@+id/btnBook3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Book 3: ANG MABAIT NA JEEP"
        android:layout_marginBottom="16dp"/>

    <!-- Book 4 -->
    <Button
        android:id="@+id/btnBook4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Book 4: ANG ISINUMPANG ISDA"
        android:layout_marginBottom="16dp"/>


    <!-- Book 5 -->
    <Button
        android:id="@+id/btnBook5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Book 5: ANG KABAYO AT ANG LEON"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
