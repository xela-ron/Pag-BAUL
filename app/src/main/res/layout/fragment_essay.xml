<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAD6A5"> <!-- UPDATED: Cream Background -->

    <!-- Header / LOGO -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#C19A6B"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="parent"> <!-- UPDATED: Brown Header -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pag-BAUL"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- The White Card Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- Back Icon -->
            <ImageView
                android:id="@+id/btnBackIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_border"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#000000" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvEssayTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Station 6."
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#C19A6B"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" /> <!-- UPDATED: ID to match logic & Color to Brown -->

            <!-- The Question -->
            <TextView
                android:id="@+id/tvEssayQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="start"
                android:text="Kung ikaw si Willy, ano ang gagawin mo upang matulungan ang iyong ina?"
                android:textColor="#4E342E"
                android:textSize="18sp"
                android:textStyle="normal"
                android:lineSpacingMultiplier="1.2"
                android:justificationMode="inter_word"
                app:layout_constraintTop_toBottomOf="@id/tvEssayTitle" /> <!-- UPDATED: ID & Darker Brown Text -->

            <!-- Text Input Box (The "Type here" area) -->
            <EditText
                android:id="@+id/etEssayAnswer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_border"
                android:gravity="top|start"
                android:hint="Type your answer here..."
                android:padding="16dp"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/btnSubmitEssay"
                app:layout_constraintTop_toBottomOf="@id/tvEssayQuestion" /> <!-- UPDATED: ID & Constraints to fill space -->

            <!-- DONE Button -->
            <Button
                android:id="@+id/btnSubmitEssay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#C19A6B"
                android:text="DONE"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" /> <!-- UPDATED: ID & Color to Brown -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
