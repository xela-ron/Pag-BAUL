<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAD6A5"> <!-- Cream Background -->

    <!-- Header / LOGO -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#C19A6B"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="parent"> <!-- Brown Header -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pag-BAUL"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- White Card Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <!-- Back Icon -->
            <ImageView
                android:id="@+id/btnBackIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_border"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#000000" />

            <!-- Title -->
            <!-- Flattened hierarchy, size 22sp, marginEnd 40dp for perfect centering -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Station 5. &quot;Emotion Chart&quot;"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#C19A6B"
                android:gravity="center"
                android:layout_marginEnd="40dp"
                app:layout_constraintStart_toEndOf="@id/btnBackIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/btnBackIcon"
                app:layout_constraintBottom_toBottomOf="@id/btnBackIcon" />

            <!-- CENTERED CONTENT CONTAINER (Question + Choices) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintBottom_toTopOf="@id/btnDone">

                <!-- The Question Text -->
                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="Ano ang nararamdaman mo?"
                    android:textColor="#4E342E" 
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:justificationMode="inter_word"
                    android:gravity="center_horizontal" 
                    />

                <!-- EMOTION BUTTONS CONTAINER -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Row 1: Happy, Proud, Sad -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- HAPPY -->
                        <LinearLayout
                            android:id="@+id/btnHappy"
                            android:layout_width="90dp"
                            android:layout_height="110dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/rounded_border"
                            android:layout_marginEnd="8dp">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/happy"
                                android:layout_marginBottom="5dp"/>
                            <TextView android:text="MASAYA" android:textStyle="bold" android:textSize="12sp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:text="Happy" android:textSize="10sp" android:textColor="#555555" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- PROUD -->
                        <LinearLayout
                            android:id="@+id/btnProud"
                            android:layout_width="90dp"
                            android:layout_height="110dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/rounded_border"
                            android:layout_marginEnd="8dp">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/proud"
                                android:layout_marginBottom="5dp"/>
                            <TextView android:text="PROUD" android:textStyle="bold" android:textSize="12sp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:text="Proud" android:textSize="10sp" android:textColor="#555555" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- SAD -->
                        <LinearLayout
                            android:id="@+id/btnSad"
                            android:layout_width="90dp"
                            android:layout_height="110dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/rounded_border">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/sad"
                                android:layout_marginBottom="5dp"/>
                            <TextView android:text="MALUNGKOT" android:textStyle="bold" android:textSize="11sp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:text="Sad" android:textSize="10sp" android:textColor="#555555" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Row 2: Angry, Disappointed -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- ANGRY -->
                        <LinearLayout
                            android:id="@+id/btnAngry"
                            android:layout_width="90dp"
                            android:layout_height="110dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/rounded_border"
                            android:layout_marginEnd="16dp">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/angry"
                                android:layout_marginBottom="5dp"/>
                            <TextView android:text="GALIT" android:textStyle="bold" android:textSize="12sp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:text="Angry" android:textSize="10sp" android:textColor="#555555" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- DISAPPOINTED -->
                        <LinearLayout
                            android:id="@+id/btnDisappointed"
                            android:layout_width="90dp"
                            android:layout_height="110dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/rounded_border">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/disappointed"
                                android:layout_marginBottom="5dp"/>
                            <TextView android:text="DISMAYADO" android:textStyle="bold" android:textSize="11sp" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:text="Disappointed" android:textSize="10sp" android:textColor="#555555" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- DONE Button -->
            <Button
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DONE"
                android:backgroundTint="#C19A6B"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
