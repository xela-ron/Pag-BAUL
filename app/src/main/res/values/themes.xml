<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PagBAUL" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- GLOBAL APP COLORS -->

        <!-- Primary Color (App Bar, Buttons, Active Elements) -->
        <item name="colorPrimary">@color/primary_brown</item>

        <!-- Primary Dark (Status Bar) -->
        <item name="colorPrimaryDark">@color/primary_brown_dark</item>

        <!-- Accent/Secondary Color (Controls, Switches, Floating Buttons) -->
        <item name="colorAccent">@color/secondary_cream_dark</item>

        <!-- Window Background -->
        <item name="android:windowBackground">@color/app_background</item>
    </style>

    <!-- Style for the Empty Answer Boxes -->
    <style name="AnswerSlot">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/rounded_border</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Style for the Clickable Letter Buttons -->
    <style name="LetterButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">18sp</item>
        <!-- Background Tint updated to Primary Brown for consistency -->
        <item name="android:backgroundTint">@color/primary_brown</item>
        <!-- Text Color White for better contrast on Brown button -->
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

</resources>
